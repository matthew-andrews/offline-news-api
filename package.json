{
  "name": "offline-news-api",
  "version": "1.0.0",
  "description": "Simple RESTful API that allows you to get news either item by item or as an array of items.",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npm run jshint && npm run lintspaces && mocha",
    "jshint": "jshint `find . -name \"*.js\" ! -path \"./node_modules/*\"`",
    "lintspaces": "lintspaces -n -t -d \"spaces\" -s 2 `find . -name \"*.js\" ! -path \"./node_modules/*\"`",
    "local-rss-server": "static --port 8081 test",
    "local-server": "node index.js --local"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/matthew-andrews/offline-news-api.git"
  },
  "author": "Matt Andrews <matt@mattandre.ws>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/matthew-andrews/offline-news-api/issues"
  },
  "bin": {
    "offline-news-api": "./bin/offline-news-api"
  },
  "homepage": "https://github.com/matthew-andrews/offline-news-api",
  "dependencies": {
    "array.prototype.find": "^1.0.0",
    "cors": "^2.4.1",
    "express": "^4.8.5",
    "feedparser": "^0.19.1",
    "superagent": "^0.18.2",
    "parseurl": "~1.3.0"
  },
  "devDependencies": {
    "jshint": "^2.5.5",
    "lintspaces-cli": "0.0.4",
    "mocha": "^1.21.4",
    "supertest": "^0.13.0"
  }
}
